<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/White"
                tools:context="com.manoj.dlt.ui.activities.DeepLinkHistoryActivity">

    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:padding="10dp"
            android:elevation="8dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/deep_link_input"
                    android:singleLine="false"
                    android:layout_height="wrap_content"
                    android:paddingRight="33dp"
                    android:paddingLeft="@dimen/activity_horizontal_large_margin"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:minHeight="48dp"
                    android:background="@color/White"
                    android:imeOptions="actionGo"/>
            <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/LightGrey"
                    />
            <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/go"
                    android:gravity="center_vertical"
                    android:id="@+id/deep_link_fire"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/deep_link_list_view"
            android:paddingLeft="@dimen/activity_horizontal_medium_margin"
            android:paddingRight="@dimen/activity_horizontal_medium_margin"
            android:listSelector="?attr/selectableItemBackground"
            android:divider="@color/Gray"/>

</LinearLayout>
