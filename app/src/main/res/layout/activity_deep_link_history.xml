<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/White"
            android:id="@+id/deep_link_history_root"
            tools:context="com.manoj.dlt.ui.activities.DeepLinkHistoryActivity">

        <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:elevation="8dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/deep_link_input"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="4dp"
                        android:textSize="@dimen/abc_text_size_large_material"
                        android:hint="@string/deep_link_search_hint"
                        android:minHeight="48dp"
                        android:inputType="textUri"
                        android:background="@color/White"
                        android:imeOptions="actionGo"/>

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/custom_go_24dp"
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/deep_link_fire"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/deep_link_list_view"
                    android:paddingLeft="@dimen/activity_horizontal_medium_margin"
                    android:paddingRight="@dimen/activity_horizontal_medium_margin"
                    android:listSelector="?attr/selectableItemBackground"
                    android:divider="@color/Gray"/>
            <TextView
                android:padding="8dp"
                android:id="@+id/privacy_policy"
                android:clickable="true"
                android:focusable="true"
                android:autoLink="web"
                android:background="@color/White"
                android:text="@string/privacy_policy"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/list_focus_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Black"
                android:alpha="0.6"
                android:visibility="gone"/>

            <include
                layout="@layout/fab_menu_vertical"
                android:visibility="gone"
                />

            <include
                layout="@layout/fab_menu_horizontal"
                android:visibility="gone"
                />

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/progress_wheel"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:matProg_barColor="@color/fabColorNormal"
                app:matProg_progressIndeterminate="true" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/shortcut_hint_banner"
            android:visibility="gone"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:layout_marginRight="8dp"
                android:text="Long click a deep link to add shortcut"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:id="@+id/shortcut_hint_banner_cancel"
                android:textColor="@color/Yellow"
                android:textSize="18dp"
                android:text="GOT IT"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>